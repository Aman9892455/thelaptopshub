    } */

    .msg-container {
      width: 100%;
      max-width: 500px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 12px 36px rgba(0, 0, 0, 0.08);
      padding: 40px;
      margin: 0 auto;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      margin-top: 10px;
      margin-bottom: 10px;
    }
    
    .msg-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    }
    
    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 35px;
      font-weight: 700;
      font-size: 28px;
      position: relative;
      padding-bottom: 15px;
    }
    
    h1:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 4px;
      background: linear-gradient(to right, #3498db, #2ecc71);
      border-radius: 2px;
    }
    
    input, textarea {
      width: 100%;
      padding: 16px 18px;
      margin-bottom: 20px;
      border: 2px solid #eef2f7;
      border-radius: 10px;
      font-size: 16px;
      transition: all 0.3s ease;
      background-color: #fafbfc;
      color: #2d3748;
    }
    
    input:focus, textarea:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.15);
      background-color: #fff;
    }
    
    input::placeholder, textarea::placeholder {
      color: #a0aec0;
    }
    
    textarea {
      min-height: 140px;
      resize: vertical;
    }
    
    .msg-button {
      background: linear-gradient(to right, #3498db, #2ecc71);
      color: white;
      border: none;
      padding: 18px 20px;
      border-radius: 10px;
      font-size: 17px;
      font-weight: 600;
      cursor: pointer;
      width: 100%;
      transition: all 0.3s ease;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
      letter-spacing: 0.5px;
    }
    
    .msg-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
    }
    
    .msg-button:active {
      transform: translateY(0);
    }
    
    .msg-button:disabled {
      background: linear-gradient(to right, #bdc3c7, #95a5a6);
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }
    
    .spinner {
      width: 20px;
      height: 20px;
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: white;
      animation: spin 1s ease-in-out infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    #status {
      padding: 18px;
      margin-top: 25px;
      border-radius: 10px;
      text-align: center;
      font-weight: 500;
      font-size: 16px;
      line-height: 1.5;
      transition: all 0.3s ease;
      opacity: 0;
      transform: translateY(10px);
      height: 0;
      overflow: hidden;
    }
    
    #status.show {
      opacity: 1;
      transform: translateY(0);
      height: auto;
    }
    
    .success {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }
    
    .error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }
    
    @media (max-width: 600px) {
      .msg-container {
        padding: 30px 25px;
        border-radius: 12px;
      }
      
      h1 {
        font-size: 24px;
        margin-bottom: 25px;
      }
      
      input, textarea {
        padding: 14px 16px;
        margin-bottom: 16px;
      }
      
      .msg-button {
        padding: 16px 20px;
        font-size: 16px;
      }
    }
  </style>
</head>
<body>
  <div class="msg-container">
    <h1>Contact Us</h1>
    <form id="contactForm">
      <input name="first_name" placeholder="First Name" required /><br />
      <input name="last_name" placeholder="Last Name" required /><br />
      <input name="mobile" placeholder="Mobile Number" /><br />
      <input name="email" type="email" placeholder="Email" /><br />
      <input name="subject" placeholder="Subject" required /><br />
      <textarea name="message" placeholder="Your message"></textarea><br />
      <button type="submit" id="submitBtn" class="msg-button">
        <span>Send Message</span>
      </button>
    </form>
    
    <div id="status"></div>
  </div>

  <script>
    document.getElementById('contactForm').addEventListener('submit', async e => {
      e.preventDefault();
      const form = e.target;
      const data = Object.fromEntries(new FormData(form));
      const status = document.getElementById('status');
      const submitBtn = document.getElementById('submitBtn');
      
      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<div class="spinner"></div><span>Sending...</span>';
      status.className = '';
      status.textContent = '';
      status.classList.remove('show');
      
      try {
        const res = await fetch('https://thelaptopshub.onrender.com/send-email', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const resp = await res.json();

        if (res.ok) {
          status.textContent = resp.message || 'Message sent successfully!';
          status.className = 'success';
          form.reset();
        } else {
          status.textContent = resp.error || 'Failed to send message. Please try again.';
          status.className = 'error';
        }
      } catch (error) {
        status.textContent = 'Network error: ' + error.message;
        status.className = 'error';
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<span>Send Message</span>';
        // Show status message with animation
        setTimeout(() => {
          status.classList.add('show');
        }, 10);
      }
    });
  </script>
</body>
</html>